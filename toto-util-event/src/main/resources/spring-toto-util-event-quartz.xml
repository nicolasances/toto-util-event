<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
								http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
								http://www.springframework.org/schema/mvc
								http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
								http://www.springframework.org/schema/context
								http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- JOB - 	Check bollette da pagare -->
	<!-- 		Cerca le bollette non pagate e per le quali Ã¨ scaduto il periodo massimo configurato per il pagamento -->
	<bean id="toto-util-event.event.listener.detail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="toto-util-event.event.listener" />
		<property name="targetMethod" value="startJob" />
	</bean>
	<bean id="toto-util-event.event.listener.trigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="toto-util-event.event.listener.detail" />
   		<property name="cronExpression" value="${toto-util-event.event.listener.cron}"/>
	</bean>
	
	<!-- JOB SCHEDULER CONFIGURATION -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				<ref bean="toto-util-event.event.listener.detail" />
			</list>
		</property>

		<property name="triggers">
			<list>
				<ref bean="toto-util-event.event.listener.trigger" />
			</list>
		</property>
	</bean>
	
</beans>